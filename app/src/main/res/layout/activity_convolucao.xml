<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_entrada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_imCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="CÃ¢mera"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/bt_imGaleria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Galeria"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/bt_imExemplo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:singleLine="true"
                android:text="Exemplo"
                android:textSize="8sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="Kernel:"/>

            <Spinner
                android:id="@+id/sp_kernel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/kernels"
                android:prompt="@string/prompt_kernel"></Spinner>

            <Button
                android:id="@+id/bt_executarConv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Executar"
                android:textSize="8sp"/>

            <ImageButton
                android:id="@+id/ibt_salvarImagemConvolucao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:src="@drawable/salvar_imagem"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:columnCount="3"
                android:paddingTop="10dp"
                android:rowCount="3">

                <EditText
                    android:id="@+id/ed00"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:password="false"
                    android:phoneNumber="false"
                    android:singleLine="false"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed01"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:autoText="false"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed02"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed10"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed11"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed12"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed20"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed21"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed22"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:maxWidth="32dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </GridLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resultado: "/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:columnCount="5"
                    android:rowCount="10">

                    <TextView
                        android:id="@+id/tv00"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv01"
                        android:layout_column="1"
                        android:layout_gravity="bottom"
                        android:layout_row="0"
                        android:gravity="bottom"
                        android:text=" + "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv02"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv03"
                        android:layout_column="3"
                        android:layout_gravity="bottom"
                        android:layout_row="0"
                        android:gravity="bottom"
                        android:text=" + "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv04"
                        android:layout_column="4"
