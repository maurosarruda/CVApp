                        android:textSize="12sp"/>

                    <!---->

                    <TextView
                        android:id="@+id/tv30"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv31"
                        android:layout_column="1"
                        android:layout_gravity="bottom"
                        android:layout_row="3"
                        android:gravity="bottom"
                        android:text=" + "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv32"
                        android:layout_column="2"
                        android:layout_row="3"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv33"
                        android:layout_column="3"
                        android:layout_gravity="bottom"
                        android:layout_row="3"
                        android:gravity="bottom"
                        android:text=" + "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv34"
                        android:layout_column="4"
                        android:layout_row="3"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv40"
                        android:layout_column="0"
                        android:layout_marginBottom="5dp"
                        android:layout_row="4"
                        android:text="x0"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv42"
                        android:layout_column="2"
                        android:layout_marginBottom="5dp"
                        android:layout_row="4"
                        android:text="x0"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv44"
                        android:layout_column="4"
                        android:layout_marginBottom="5dp"
                        android:layout_row="4"
                        android:text="x0"
                        android:textSize="12sp"/>

                    <!---->

                    <TextView
                        android:id="@+id/tv60"
                        android:layout_column="0"
                        android:layout_row="6"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv61"
                        android:layout_column="1"
                        android:layout_gravity="bottom"
                        android:layout_row="6"
                        android:gravity="bottom"
                        android:text=" + "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv62"
                        android:layout_column="2"
                        android:layout_row="6"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv63"
                        android:layout_column="3"
                        android:layout_gravity="bottom"
                        android:layout_row="6"
                        android:gravity="bottom"
                        android:text=" + "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv64"
                        android:layout_column="4"
                        android:layout_row="6"
                        android:text="000"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv70"
                        android:layout_column="0"
                        android:layout_marginBottom="5dp"
                        android:layout_row="7"
                        android:text="x0"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv72"
                        android:layout_column="2"
                        android:layout_marginBottom="5dp"
                        android:layout_row="7"
                        android:text="x0"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv74"
                        android:layout_column="4"
                        android:layout_marginBottom="5dp"
                        android:layout_row="7"
                        android:text="x0"
                        android:textSize="12sp"/>

                    <!---->

                    <TextView
                        android:id="@+id/tv91"
                        android:layout_column="1"
                        android:layout_row="9"
                        android:text=" = "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv92"
                        android:layout_column="2"
                        android:layout_row="9"
                        android:text="000"
                        android:textSize="12sp"/>

                </GridLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:paddingLeft="5dp"
            android:text="Percorrer imagem:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X: "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_seekX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="0"
                android:textSize="12sp"/>

            <SeekBar
                android:id="@+id/sb_posicaoX"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:max="200"
                android:progress="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Y: "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_seekY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="0"
                android:textSize="12sp"/>

            <SeekBar
                android:id="@+id/sb_posicaoY"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:max="200"
                android:progress="0"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imv_saida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"/>
</LinearLayout>